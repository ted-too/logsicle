{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
}
